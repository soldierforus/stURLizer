{
  "name": "stURLizer",
  "version": "1.3.0",
  "description": "A chrome extension for copying urls to the clipboard without parameters",
  "manifest_version": 3,
  "background": {
      "service_worker": "js/background.js"
  },
  "icons": {
    "16": "images/icon16.png",
    "32": "images/icon32.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "permissions": ["activeTab", "scripting", "contextMenus"],
    "content_scripts": [
      {
       "matches": ["<all_urls>"],
       "js": ["js/content.js", "js/linkToClipboard.js"]
      }
   ],
  "action": {
    "default_title": "stURLize the current browser location"
  }
}